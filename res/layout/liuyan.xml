<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <ScrollView android:id="@+id/liuyanscr"
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        
        >
    <LinearLayout 
        android:id="@+id/lodpsakkd"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <ListView
            android:id="@+id/liuyanlistxt_id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:dividerHeight="10dp"
            >
</ListView>
</LinearLayout>
</ScrollView>

    <LinearLayout 
        android:id="@+id/dasdadsad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"   
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:weightSum="5"
        >
        <EditText
            android:id="@+id/liuyan_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="给我留言吧..."
            android:layout_weight="4"
            android:layout_alignParentBottom="true"
             android:gravity="bottom"
             android:layout_gravity="bottom"
             >
        </EditText>

        <Button
            android:id="@+id/liuyanbtn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留 言" 
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
             android:layout_gravity="bottom"
              android:gravity="bottom"
            android:onClick="liuyanclick"
           android:background="@color/btnys"
            
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
        <Button android:id="@+id/refreshbtn_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我 要 看 留 言"
            android:onClick="refreshbtn"
            android:background="@color/btnys"
            
            />
    </LinearLayout>
</LinearLayout>
