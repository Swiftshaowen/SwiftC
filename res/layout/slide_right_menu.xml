<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_night"
    android:background="@drawable/f"
    >
    
    <!-- 设置字体效果和日夜间模式 的布局-->
   
    <RelativeLayout 
        android:id="@+id/snlay_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        > 
          <TextView 
            android:id="@+id/sunandnight_modelid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置夜间模式     "
            android:textSize="25sp"
            android:textColor="@color/btnys"
            />
           <CheckBox
            android:layout_toRightOf="@id/sunandnight_modelid"
            android:id="@+id/checkbox_id"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/lybtnlayout_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/snlay_id"
        android:layout_marginTop="30dp"
        >
        <Button 
            android:id="@+id/liuyanbtn_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我   要  留  言"
             android:background="@color/btnys"
            
            />
    </RelativeLayout>
    
      <RelativeLayout 
        android:id="@+id/scbtnlayout_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lybtnlayout_id"
        android:layout_marginTop="30dp"
        >
        <Button 
            android:id="@+id/mshoucangbtn_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我   的  收  藏"
             android:background="@color/btnys"
            
            />
    </RelativeLayout>
    
    
    
    
    
    
    
    
    
        <RelativeLayout 
        android:id="@+id/ylialyout_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        </RelativeLayout>

        <TextView
            android:id="@+id/yl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:text="友   情   链   接"
            android:textColor="@color/btnys"
            android:textSize="25dp" />
        
        
        
        <!-- 自定义控件 -->
        
  <com.imooc.arcmenu.view.ArcMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/com.itheima.htmlviewer"
    android:id="@+id/id_menu" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    hyman:position="right_bottom"
    hyman:radiu="140dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/composer_button" >

        <ImageView
            android:id="@+id/id_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/composer_icn_plus" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sina"
        android:tag="新浪 " 
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baidu"
        android:tag="百度" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sohu"
        android:tag="搜狐" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qq"
        android:tag="腾讯" />

    <!-- <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/composer_with"
        android:tag="People" /> -->

</com.imooc.arcmenu.view.ArcMenu>
        
    
</RelativeLayout>
