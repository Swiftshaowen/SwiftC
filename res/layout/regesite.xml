<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/j"
     >
    
      <LinearLayout 
        android:layout_marginTop="200dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView 
            android:id="@+id/rg_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="25sp"
            />
        <EditText 
            android:id="@+id/rg_zh_edit_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的邮箱"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView 
            android:id="@+id/rg_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="25sp"
            />
        <EditText 
            android:id="@+id/rg_password_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            
            />
    </LinearLayout>
    <Button 
        android:id="@+id/rg_id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="实  名  注  册"
        android:layout_gravity="center_horizontal"
        android:onClick="rgclick"
        android:layout_marginTop="20dp"
        android:background="@color/btnys"
        />
    
    

</LinearLayout>
